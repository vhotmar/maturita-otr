<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111"
      fx:controller="gui.view.ChatsView">
   <children>
      <VBox prefHeight="400.0" prefWidth="188.0">
         <children>
            <ListView fx:id="contacts" prefHeight="316.0" prefWidth="208.0" VBox.vgrow="ALWAYS"/>
            <StackPane fx:id="c1" maxHeight="200.0" VBox.vgrow="SOMETIMES">
               <children>
                  <Button fx:id="addContactButton" mnemonicParsing="false" onAction="#addContact" text="%gui.addChat"/>
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0"/>
               </padding>
            </StackPane>
         </children>
      </VBox>
      <VBox prefHeight="400.0" prefWidth="265.0" HBox.hgrow="ALWAYS">
         <children>
            <ListView fx:id="messages" styleClass="messagesListView"/>
            <HBox fx:id="c2">
               <children>
                  <TextArea fx:id="message" maxHeight="200.0" prefHeight="100.0" prefWidth="100.0"
                            HBox.hgrow="SOMETIMES"/>
                  <StackPane>
                     <HBox.margin>
                        <Insets left="10.0"/>
                     </HBox.margin>
                     <children>
                        <Button fx:id="sendMessageButton" mnemonicParsing="false" onAction="#sendMessage"
                                text="%gui.send"/>
                     </children>
                  </StackPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
