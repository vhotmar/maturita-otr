<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="gui.controllers.ChatTab">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="300.0" vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <ScrollPane hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    vbarPolicy="ALWAYS" GridPane.columnSpan="2147483647" GridPane.hgrow="ALWAYS"
                    GridPane.vgrow="ALWAYS">
            <content>
                <ListView fx:id="messages"/>
            </content>
        </ScrollPane>
        <Button fx:id="sendMessageButton" mnemonicParsing="false" onAction="#sendMessage" text="%gui.chat.sendmessage"
                GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
        <TextArea fx:id="messageText" maxHeight="50.0" prefHeight="50.0" prefWidth="300.0"
                  promptText="%gui.chat.message" GridPane.rowIndex="1"/>
    </children>
</GridPane>
